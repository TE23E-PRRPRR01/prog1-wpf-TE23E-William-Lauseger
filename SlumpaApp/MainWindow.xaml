<Window x:Class="SlumpaApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SlumpaApp"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800" Background="Cyan"
    SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="16" Margin="5">Slumpa fram ett tal 1-100</Label>
        <Label FontSize="14" Margin="10">Ange maxgräns</Label>
        <TextBox Name="txbMax" Margin="10" Padding="5"></TextBox>
        <Button Click="KlickSlumpa" Margin="10" Padding="5" FontWeight="Bold">Slumpa</Button>
        <TextBox Name="txbResultat" Margin="10" Padding="10" Width="200" Height="150"
        FontSize="103"></TextBox>
    </StackPanel>
</Window>