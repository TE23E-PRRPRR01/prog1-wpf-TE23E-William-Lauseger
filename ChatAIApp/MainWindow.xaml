<Window x:Class="ChatAIApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAIApp"
        mc:Ignorable="d"
        Title="AIchat"
        Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Label FontSize="20" FontWeight="bold"></Label>
        <TextBox Name="txbPrompt" Height="100" Margin="10" Padding="10"
        Width="400"></TextBox>
        <Button Click="KlickSkicka" Margin="10" Padding="10">Skicka</Button>
        <TextBox Name="txbSvar" Height="300" Margin="10" Padding="10"
        IsReadOnly="true" VerticalScrollBarVisibility="auto" Width="400" TextWrapping="wrap">
        </TextBox>
    </StackPanel>
</Window>
