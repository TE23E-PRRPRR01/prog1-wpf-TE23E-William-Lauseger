<Window x:Class="KrypterarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KrypterarApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label Margin="10">CeasarKrypto</Label>
        <Label Margin="10">Ange en text </Label>
        <TextBox Margin="10" Name="txbInput"></TextBox>
        <Label Margin="10">Ange en nyckel (1-25) </Label>
        <TextBox Margin="10" Name="txbNyckel"></TextBox>
        <Button Margin="10" Click="KlickKör">Kör</Button>
        <Label Margin="10">Texten krypterad</Label>
        <TextBox Height="200" Margin="10" Name="txbOutput" IsReadOnly="True"></TextBox>
    </StackPanel>
</Window>
