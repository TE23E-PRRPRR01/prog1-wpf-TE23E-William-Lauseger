<Window x:Class="EventApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight"
        MinHeight="200" MinWidth="200">
    <StackPanel Margin="5" Background="Cyan">
        <Label Margin="5" FontSize="16">Ange en text</Label>
        <TextBox Name="tbxText" Margin="5" Height="50" Width="200" TextWrapping="Wrap"></TextBox>
        <Button Click="KlickOK" Margin="5" Padding="7" Background="LimeGreen">OK</Button>
        <Button Click="KlickAvbryt" Margin="5" Padding="7" Background="Red">Avbryt</Button>
    </StackPanel>
</Window>
