<Window x:Class="BokstavsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BokstavsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel>
        <Label Margin="10" Width="70">Välja bokstav</Label>
        <StackPanel Orientation="Horizontal">
           <Label Margin="10" Width="70">Namn: </Label>
           <TextBox Name="txbNamn" Margin="10" Width="150"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Margin="10" Width="70">Index: </Label>
            <TextBox Name="txbIndex" Margin="10" Width="150"></TextBox>
        </StackPanel>
        <Button Click="KlickVisa" Margin="10" Padding="5" Width="50">Visa</Button>
        <StackPanel Orientation="Horizontal">
            <Label Margin="10" Width="70">Resultat: </Label>
            <TextBox Name="txbResultat" Margin="10" Width="200"></TextBox>
        </StackPanel>
    </StackPanel>
</Window>
