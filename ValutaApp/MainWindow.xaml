<Window x:Class="ValutaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValutaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
        <StackPanel>
            <Label>Valutaomvandlare</Label>

            <StackPanel Orientation="Horizontal">
                <Label Margin="10" Width="70">(sek): </Label>
                <TextBox Margin="10" Width="150" Name="txbBelopp"></TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Click="KlickUSD" Margin="10" Padding="5" Width="50">USD</Button>
                <Button Click="KlickEUR" Margin="10" Padding="5" Width="50">EUR</Button>
                <Button Click="KlickGBP" Margin="10" Padding="5" Width="50">GBP</Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Margin="10" Width="70">Resultat: </Label>
                <TextBox Margin="10" Width="150" Name="txbResultat"></TextBox>
            </StackPanel>
        </StackPanel>
</Window>
