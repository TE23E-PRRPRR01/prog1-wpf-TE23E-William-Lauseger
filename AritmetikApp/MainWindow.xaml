<Window x:Class="AritmetikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Background="#EEE">
        <Label Margin="2" FontSize="24">Aritmetiken</Label>
        <Label Margin="2">Tal 1:</Label>
        <TextBox Name="txbTal1" Margin="2"></TextBox>
        <Label Margin="2">Operator (+, -, *, /)</Label>
        <TextBox Name="txbOperator" Margin="2"></TextBox>
        <Label Margin="2">Tal 2:</Label>
        <TextBox Name="txbTal2" Margin="2"></TextBox>
        <Button Click="KlickBeräkna" Margin="2">Beräkna</Button>
        <Label Name="lblResultat" Margin="2"></Label>
    </StackPanel>
</Window>
