<Window x:Class="FoodApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MinHeight="300" MinWidth="300"
        SizeToContent="WidthAndHeight"
        Background="#FFF0E0">
    <StackPanel>
        <Label Margin="5" FontSize="30">MatReceptsamling</Label>
        <StackPanel Orientation ="Horizontal" Margin ="5">
            <Label Width ="150">Maträttens namn: </Label>
            <TextBox Name ="txbNamn" Width ="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation ="Horizontal" Margin ="5">
            <Label Width ="150">Huvudingrediens: </Label>
            <TextBox Name ="txbIngredienser" Width ="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation ="Horizontal" Margin ="5">
            <Label Width ="150">Tillagningstid (min): </Label>
            <TextBox Name ="txbTid" Width ="200"></TextBox>
        </StackPanel>
        <Button Margin ="5" Padding ="5" Click ="KlickVisa">Visa Recept</Button>
        <StackPanel Orientation ="Horizontal" Margin ="5">
            <Label Width ="150">Resultat: </Label>
            <TextBox Name ="txbResultat" Width ="200" IsReadOnly="True"></TextBox>
        </StackPanel>
        <Button Margin ="5" Padding ="5" Click ="KlickRensa">Rensa</Button>
        <Button Margin ="5" Padding ="5" Click ="KlickSpara">Lägg till recept</Button>
        <StackPanel>
            <Label Width="150">Antal recept: </Label>
            <TextBox Width="200" Name="txbAntal" IsReadOnly="True"></TextBox>
        </StackPanel>
    </StackPanel>
</Window>
