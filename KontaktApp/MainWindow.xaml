<Window x:Class="KontaktApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KontaktApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="30" Margin="5">Kontaktboken</Label>
        <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="150">Ange titel(Herr/Fru): </Label>
            <TextBox Name="txbTitel" Width="250"></TextBox>
        </StackPanel>
        <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="150">Ange förnamn: </Label>
            <TextBox Name="txbFörnamn" Width="250"></TextBox>
        </StackPanel>
        <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="150">Ange efternamn: </Label>
            <TextBox Name="txbEfternamn" Width="250"></TextBox>
        </StackPanel>
        <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="150">Ange ålder: </Label>
            <TextBox Name="txbÅlder" Width="250"></TextBox>
        </StackPanel>
        <Button Click="KlickVisa" Margin="5" Padding="5">Visa</Button>
        <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="10" Width="140">Resultat: </Label>
            <TextBox Name="txbResultat" Width="250"></TextBox>
        </StackPanel>
        <Button Margin="5" Padding="5">Rensa</Button>
    </StackPanel>
</Window>
